<p id="notice"><%= notice %></p>

<section class="post">
  <h2>title</h2>
  <p><%= @post.title %></p><br>
  <h2>body</h2>
  <p><%= @post.body %></p>
</section>

<section class="tags">
  <h3>tags</h3>
  <% @post.tags.each do |tag| %>
    <span><%= tag.name %></span>

    <section class="descriptions">
      <h4>Tag's descriptions</h4>
      <% tag.descriptions.each do |description| %>
        <span><%= description.content %></span>
      <% end %>
    </section>

  <% end %>
</section>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
